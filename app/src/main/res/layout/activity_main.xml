<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/hanarm"
                android:text="학술 분과"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:fontFamily="@font/hanarm"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="ㆍ나비 (역사토론 동아리)" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:fontFamily="@font/hanarm"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="ㆍ아카데미 (학술토론 동아리)" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:fontFamily="@font/hanarm"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="ㆍ유니피스 (평화운동 동아리)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/hanarm"
                android:text="교양 분과"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:fontFamily="@font/hanarm"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="ㆍ묵향회 (서예 동아리)" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:fontFamily="@font/hanarm"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="ㆍ바둑지기 (바둑 동아리)" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:fontFamily="@font/hanarm"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="ㆍ재작 (프라모델 동아리)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="체육 1 분과" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="체육 2 분과" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="종교 분과" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문화 1 분과" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문화 2 분과" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>